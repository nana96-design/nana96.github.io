  <div class="header-container">
    <div id="editable-title" class="main-title" contenteditable="true" spellcheck="false">
      나의 대시보드
    </div>
  </div>

  <div class="link-container">
    <a href="https://chatgpt.com" target="_blank" class="link-box hello-box">
      HELLO
    </a>

    <a href="https://gemini.google.com" target="_blank" class="link-box world-box">
      WORLD
    </a>
  </div>

  <p class="hint">※ 제목을 클릭해서 수정해보세요. 자동으로 저장됩니다.</p>

  <script>
    const titleElement = document.getElementById('editable-title');

    // 1. 페이지 로드 시 저장된 제목 불러오기
    window.onload = () => {
      const savedTitle = localStorage.getItem('custom-dashboard-title');
      if (savedTitle) {
        titleElement.innerText = savedTitle;
      }
    };

    // 2. 제목 수정 시 실시간 저장 (포커스를 잃을 때 저장)
    titleElement.addEventListener('blur', () => {
      localStorage.setItem('custom-dashboard-title', titleElement.innerText);
    });

    // 엔터 키 누르면 줄바꿈 대신 저장하고 포커스 해제
    titleElement.addEventListener('keydown', (e) => {
      if (e.key === 'Enter') {
        e.preventDefault();
        titleElement.blur();
      }
    });
  </script>

</body>
